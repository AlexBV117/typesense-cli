{
  "compilerOptions": { 
	  "baseUrl": ".",
	  "paths": {
		"@Modules/*": ["./src/TypescriptSourceFiles/*"],
		"@Config/*": ["./config/*"],
		"@Interfaces/*" : ["./src/TypescriptSourceFiles/Interfaces/*"]
	  },
	  "outDir": "src/Modules",
	  "rootDir": "src/TypescriptSourceFiles",
	  "target": "es2020",                                  
	  "module": "es2020",                                
	  "esModuleInterop": true,                             
	  "forceConsistentCasingInFileNames": true,            
	  "strict": true,                                      
	  "skipLibCheck": true                                 
  },
  "exclude": [
	"./src/TypescriptSourceFiles/Interfaces/*",
	"refactor/cmdFunctions.ts",
	"refactor/setup.ts",
	"jest.config.ts"
  ],
}