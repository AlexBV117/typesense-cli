{
  "compilerOptions": { 
	  "baseUrl": "src",
	  "paths": {
		"@Modules/*": ["src/Modules/*"],
		"@Config/*": ["config/*"],
		"@Interfaces/*" : ["src/TypescriptSourceFiles/Interfaces/*"]
	  },
	  "outDir": "src/Modules",
	  "rootDir": "src/TypescriptSourceFiles",
	  "target": "es2016",                                  
	  "module": "commonjs",                                
	  "esModuleInterop": true,                             
	  "forceConsistentCasingInFileNames": true,            
	  "strict": true,                                      
	  "skipLibCheck": true                                 
  },
  "exclude": [
	"refactor/Parser.ts",
	"refactor/cmdFunctions.ts",
	"refactor/setup.ts",
	"jest.config.ts"
  ],
}
